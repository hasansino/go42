#!/bin/sh

# Git commit-msg hook to validate commit messages using commitlint
# This hook is triggered after the commit message is entered

if ! command -v commitlint &> /dev/null; then
    echo "⚠️  Warning: commitlint is not installed"
    echo "   Install with: npm install -g @commitlint/cli @commitlint/config-conventional"
    echo "   Skipping commit message validation..."
    exit 0
fi

commitlint --config etc/.commitlintrc.yaml --edit "$1"

exit $?